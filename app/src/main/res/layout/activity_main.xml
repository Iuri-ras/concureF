<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- App Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ESP32 BLE Controller"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Scan Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/scanButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Scan for ESP32 Devices"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            app:icon="@android:drawable/ic_menu_search"
            app:iconGravity="textStart"
            app:layout_constraintTop_toBottomOf="@id/titleText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
            
        <!-- Scan Hint -->
        <TextView
            android:id="@+id/scanHint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ðŸ’¡ Long-press scan button for fallback mode (shows all devices)"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/scanButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Device List Label -->
        <TextView
            android:id="@+id/devicesLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Discovered BLE Devices (ðŸŽ¯ = ESP32):"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/scanHint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Device List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/deviceList"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/devicesLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Connect Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/connectButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Connect to Selected Device"
            android:textSize="16sp"
            android:enabled="false"
            android:layout_marginBottom="16dp"
            app:icon="@android:drawable/ic_menu_share"
            app:iconGravity="textStart"
            app:layout_constraintTop_toBottomOf="@id/deviceList"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Connection Status -->
        <TextView
            android:id="@+id/connectionStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Status: Disconnected"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/connectButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Message Log Label -->
        <TextView
            android:id="@+id/logLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Message Log:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/connectionStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Message Log -->
        <ScrollView
            android:id="@+id/logScrollView"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/logLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/messageLog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Waiting for messages...\n"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:textColor="@android:color/black" />

        </ScrollView>

        <!-- Send Message Section -->
        <TextView
            android:id="@+id/sendLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Send Message to ESP32:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/logScrollView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Message Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/messageInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Enter message to send"
            app:layout_constraintTop_toBottomOf="@id/sendLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/sendButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/messageInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Send Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:textSize="14sp"
            android:enabled="false"
            android:layout_marginStart="8dp"
            app:icon="@android:drawable/ic_menu_send"
            app:iconGravity="textStart"
            app:layout_constraintTop_toTopOf="@id/messageInputLayout"
            app:layout_constraintBottom_toBottomOf="@id/messageInputLayout"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Clear Log Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/clearLogButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Clear Log"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:icon="@android:drawable/ic_menu_delete"
            app:iconGravity="textStart"
            app:layout_constraintTop_toBottomOf="@id/messageInputLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>